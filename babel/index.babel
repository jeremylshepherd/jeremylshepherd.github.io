let queryCheck = (r, q) => {
  q = q.toLowerCase();
  let tech = r.technologies.join(", ");
  if (
    r.title.toLowerCase().indexOf(q) !== -1 ||
    tech.toLowerCase().indexOf(q) !== -1 ||
    r.type.toLowerCase().indexOf(q) !== -1
  ) {
    return true;
  } else {
    return false;
  }
};

